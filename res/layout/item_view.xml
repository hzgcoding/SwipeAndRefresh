<zrc.widget.listitemmenu.ItemMenuView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
     >

    <TextView
        android:id="@+id/delete"
        android:layout_width="@dimen/item_menu_width"
        android:layout_height="@dimen/item_height"
        android:background="#ffcc2500"
        android:gravity="center"
        android:tag="delete"
        android:text="@string/delete"
        android:textColor="#ffffffff"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/info"
        android:layout_width="@dimen/item_menu_width"
        android:layout_height="@dimen/item_height"
        android:background="#ff308dff"
        android:gravity="center"
        android:tag="info"
        android:text="@string/info"
        android:textColor="#ffffffff"
        android:textSize="20sp" />

    <LinearLayout
        android:id="@+id/content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:tag="LinearLayout_1" >

        <ImageView
            android:id="@+id/image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:contentDescription="@string/image"
            android:src="@mipmap/logo"
            android:tag="ImageView" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:tag="LinearLayout_2" >

            <TextView
                android:id="@+id/name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="2dp"
                android:tag="TextView_1"
                android:text="@string/name"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/sign"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="2dp"
                android:tag="TextView_2"
                android:text="@string/sign"
                android:textSize="14sp" />
        </LinearLayout>
    </LinearLayout>

</zrc.widget.listitemmenu.ItemMenuView>